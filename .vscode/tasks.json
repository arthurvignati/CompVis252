{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar C",
      "type": "shell",
      "command": "C:/msys64/ucrt64/bin/gcc.exe",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": { "PATH": "C:/msys64/ucrt64/bin;${env:PATH}" }
      },
      "args": [
        "main.c",
        "-o", "main.exe",
        "-g",
        "-Wall", "-Wextra",
        "-IC:/msys64/ucrt64/include/SDL3",
        "-LC:/msys64/ucrt64/lib",
        "-lSDL3"
      ],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"]
    }
  ]
}
